<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:statusBarColor">@color/primaryTextColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Timer" parent="AppTheme">
        <item name="android:textSize">@dimen/text_timer</item>
        <item name="android:fontFamily">Courier</item>
        <item name="android:color">@color/primaryColor</item>
    </style>

    <style name="SingleLineText" parent="AppTheme">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SearchBarTheme" parent="AppTheme">
        <item name="android:backgroundTint">@color/secondaryDarkColor</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="DialogButtonTheme" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="DialogTitleTheme" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="DialogBodyTheme" parent="DialogTitleTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PlaylistTextTheme" parent="AppTheme">
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="PlaylistsDialogTransition">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
